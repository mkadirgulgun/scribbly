@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifreyi Unuttum";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes - Şifreyi Unuttum</title>
    <link rel="stylesheet" href="~/css/ForgotPasswordStyles.css">
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="logo">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20 12V5.749c0-.221-.078-.435-.22-.609l-2.92-3.565A.751.751 0 0 0 16.171 1H4a1 1 0 0 0-1 1v20a1 1 0 0 0 1 1h3v-2H5V3h10v2a1 1 0 0 0 1 1h2v6h2zm-7 5h8v6h-8v-6zm1 1v1h6v-1h-6zm0 2v1h6v-1h-6z" fill="#4361EE" />
                </svg>
                <span>Notes</span>
            </div>
            <h1>Şifrenizi mi unuttunuz?</h1>
            <p class="subtitle">Aşağıya email adresinizi girin, size şifre sıfırlama bağlantısı gönderelim.</p>
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-info" role="alert">
                    @TempData["Success"]
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <form asp-controller="Home" asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <label for="Email">Email Adresi</label>
                    <input asp-for="Email" type="email" id="Email" placeholder="email@example.com" required>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <button type="submit" class="submit-button">Sıfırlama Bağlantısı Gönder</button>
            </form>
            <div class="login-link">
                Şifrenizi hatırladınız mı? <a href="/home/signin">Giriş yapın</a>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
